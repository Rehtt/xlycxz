<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cn.rehtt.MainActivity">

    <EditText
        android:id="@+id/login_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="账户"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_u"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/login_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:text="登录"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="328dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="234dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/login_p"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="84dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="103dp"
        android:layout_height="45dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/login_p" />

</android.support.constraint.ConstraintLayout>
